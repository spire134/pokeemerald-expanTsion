# data/maps/Tidesmercyinterior/scripts.pory
# Macro-style event scripting (assembled by the build, not poryscript)

Tidesmercyinterior_MapScripts::
    map_script MAP_SCRIPT_ON_TRANSITION Tidesmercyinterior_OnTransition
    .byte 0

# Hide the burst ranger on every entry so he can “pop in” later
Tidesmercyinterior_OnTransition:
    hideobject 5
    end

# No-op talk script for the burst ranger (satisfies the “script cannot be empty” requirement)
Tidesmercyinterior_BurstRanger_NoOp:
    end