script Quartz_GoodRod_Fisherman {
    lock
    faceplayer
        if (!flag(FLAG_RECEIVED_GOOD_ROD)) {
    msgbox(format("Fisherman: That look in your eyes tells me you're itching for a fishing.\p"
    "Here, take this Good Rod. It's a great way to curb those angling cravings!"))
    giveitem(ITEM_GOOD_ROD)
    setflag(FLAG_RECEIVED_GOOD_ROD)
    msgbox(format("Fisherman: With this rod, you'll be reeling in Pokémon in no time!\p"
    "Just head to any body of water and give it a try. Happy fishing!"))
    } 
    else {
    msgbox(format("Fisherman: Remember, fishing is all about patience and timing.\p"))
    }
    release    
}