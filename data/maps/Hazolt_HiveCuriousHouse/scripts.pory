    msgbox(format("People say Team Hive is trying to change the world."
    "I wonder if they really can do it."))
    release
    end
}

script Swablu_Noies {
    lock
    applymovement(LOCALID_SWABLU_NOIES, moves(face_player))
    waitmovement(0)
    playse(SE_M_SING)
    waitse
    msgbox(format("Swablu sings a beautiful song."))
    waitmessage
    release
    end
}

